{
  "name": "AdBlockify",
  "version": "1.0",
  "description": "A simple AdBlocker for all your ad blocking needs that respects your privacy.",
  "author": {
		"name": "Tamoghna Kommaraju",
		"email": "tamoghnak13@gmail.com"
 },
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png",
      "19": "icon-19.png",
      "38": "icon-38.png"
  },
  
  "permissions": ["webRequest", "webRequestBlocking", "http://*/", "https://*/",  "contextMenus","activeTab"],
  "background": {
    "scripts": ["blocked_domains.js", "background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "options_page": "options.html"
}
